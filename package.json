{
  "name": "graphql-server-example",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -- nodemon -x ts-node -e ts,graphql src/index.ts",
    "debug": "dotenv -- nodemon -x 'ts-node --inspect' -e ts,graphql src/index.ts",
    "get-schema": "dotenv -- graphql get-schema -p database && dotenv -- graphql get-schema -p server",
    "playground": "dotenv -- graphql playground",
    "build": "rm -rf dist && tsc",
    "deploy": "now --public --dotenv .env.prod && now alias && now rm --yes --safe graphql-bp",
    "now-start": "node dist",
    "seed": "dotenv -- graphql query queries/seed.graphql --all -p database"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphcool-binding": "^0.1.3",
    "graphql-import": "^0.1.3",
    "graphql-yoga": "^0.2.3",
    "jsonwebtoken": "^8.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "dotenv-cli": "^1.4.0",
    "graphql-cli": "^2.0.5",
    "nodemon": "^1.12.5",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  },
  "now": {
    "alias": "airbnb"
  }
}
